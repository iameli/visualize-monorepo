{
  "name": "visualize-monorepo",
  "version": "0.0.4",
  "description": "Visualize monorepo dependencies",
  "main": "index.js",
  "bin": {
    "visualize-monorepo": "./visualize-monorepo.js"
  },
  "scripts": {
    "build-viz:deps": "cd node_modules/viz.js && make deps",
    "build-viz:all": "mkdir -p node_modules/viz.js/node_modules && rm -rf node_modules/viz.js/node_modules/.bin && ln -s $PWD/node_modules/.bin node_modules/viz.js/node_modules/.bin && cd node_modules/viz.js && make all",
    "start": "mkdir -p dist && cp node_modules/viz.js/build-lite/module* dist && run-p 'start:**'",
    "start:worker": "parcel watch src/worker.js",
    "start:main": "parcel watch src/index.html",
    "start:server": "cd dist && live-server",
    "build": "parcel build src/worker.js && parcel build src/index.html && parcel build src/cloudflare-worker.js"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "esm": "^3.2.6",
    "fs-extra": "^7.0.1",
    "get-monorepo-packages": "^1.1.0",
    "opn": "^5.4.0",
    "tmp": "0.0.33",
    "viz.js": "git+https://github.com/iameli/viz.js.git#37683c63c9835b1a740dbe4f7507e4c7e6aae93b"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.3",
    "@babel/plugin-proposal-class-properties": "^7.3.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
    "@babel/preset-env": "^7.3.1",
    "d3": "^5.9.1",
    "d3-graphviz": "^2.6.1",
    "npm-run-all": "^4.1.5",
    "parcel": "^1.11.0",
    "rollup": "^1.2.3",
    "rollup-plugin-babel": "^4.3.2"
  },
  "browserslist": [
    "last 2 chrome versions"
  ]
}
